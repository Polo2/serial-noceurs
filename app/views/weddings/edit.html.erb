<h2>Edit your wedding</h2>

<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <%= simple_form_for(@wedding) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
      <%= f.input :title, required: true %>
      <%= f.input :description, required: true %>
      <%= f.input :date,  start_year: Time.now.year, end_year: Time.now.year + 8, order: [:day, :month, :year], required: true, class: "inline" %>
      <%= f.input :location, required: true %>
      <%= f.input :capacity, required: true, numericality: { only_integer: true, greater_than: 0}, hint: ("Possibility of guests") %>
      <%= f.input :price, required: true, numericality: { only_integer: true, greater_than: 0 }, hint: ("Unity price per one serial noceur") %>
      <%= f.input :photo,required: true, as: :attachinary %>
    </div>


    <div class="form-actions">
      <%= f.button :submit, "Edit", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>



</div>


